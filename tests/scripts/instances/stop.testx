# Check that it is possible to stop an application
- go to:
    url: /
- set:
    menu.Instances: ''
- wait to appear:
    expected: instances.Running('{{testName}}')
    timeout: 120000
- set:
    menu.Instances: ''
    runningInstance('{{testName}}'): ''
    instances.Stop('{{testName}}'): ''
    instances.Stop.Yes('{{testName}}'): ''
- wait to disappear:
    expected: runningInstance('{{testName}}')
    timeout: 120000
